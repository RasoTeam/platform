<div class="row">
  <div class="twelve columns">
    <div id="signup">
      <div class="panel">
        <h2><%= t(:new_super_user) %></h2>
        <hr/>
        <%= form_for @super_user, :url => backoffice_super_users_path do |f| %>
          <ul>
            <% @super_user.errors.full_messages.each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
          <p>
            <%= f.label :name %><br />
            <%= f.text_field :name %>
          </p>
          <p>
            <%= f.label :email %><br />
            <%= f.email_field :email %>
          </p>
          <p>
            <%= f.label :password %><br />
            <%= f.password_field :password %>
          </p>
          <p>
            <%= f.label :password_confirmation, "Confirmation" %><br />
            <%= f.password_field :password_confirmation %>
          </p>
          <p>
            <%= f.submit %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>
