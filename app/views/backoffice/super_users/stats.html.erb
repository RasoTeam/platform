<div class="row">
	<div class="twelve columns">
		<h2>Welcome to RASO Backoffice</h2>
		<hr/>

		<dl class="tabs pill">
			
			<% if params[:year] != nil %>
				<dd><%= link_to "All time", backoffice_stats_path %></dd>
			<% else %>
				<dd class="active"><%= link_to "All time", backoffice_stats_path %></dd>
			<% end %>
			<% for i in @first_year..@current_year %>
				<% if (params[:year] != nil ) && (Integer(params[:year])== i) %>
				<dd class="active"><%= link_to i, backoffice_stats_path( params.merge({year: i})) %></dd>
				<% else %>
				<dd><%= link_to i, backoffice_stats_path( params.merge({year: i})) %></dd>
				<% end %>
			<% end %>

		</dl>
		<table class="twelve">
		  <tbody>
		  		<tr>
					<td>Total Received</td>
					<td><%= @received %></td>
				</tr>
				<tr>
					<td>Total in Debt</td>
					<td><%= @debt %></td>
				</tr>
				<tr>
					<td>Number of Companies</td>
					<td><%= @nr_companies %></td>
				</tr>
				<tr>
					<td>Average number of users by company</td>
					<td><%= @avg_users %></td>
				</tr>
		  </tbody>
		</table>
	</div>
</div>
