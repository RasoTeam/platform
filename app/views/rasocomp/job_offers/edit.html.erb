<div class="row">
  <div class="twelve columns">
    <div id="signup">
      <div class="panel">
        <h1>Edit Job Offer</h1>  
        <h4><%= @offer.job_name  %></h4>
        <hr />    
        
        <%= form_for [@company ,@offer] do |f| %>
            <% @offer.errors.full_messages.each do |msg| %>
                <p><%= msg %></p>
            <% end %>

            <%= f.label :job_name , :class => "radius label"%>
            <%= f.text_field :job_name %>

            <%= f.label :description , :class => "radius label"%>
            <%= f.text_area :description %>

            <%= f.label :required_education , :class => "radius label"%>
            <%= f.text_area :required_education %>
          
            <%= f.label :skills , :class => "radius label"%>
            <%= f.text_area :skills %>

            <%= f.label :conditions , :class => "radius label"%>
            <%= f.text_area :conditions %>
            </br>

             <p style="text-align: center"><%= f.submit 'Update the Job Offer!', :class=>"button" %></p>

      <% end %>
      </div>
    </div>
  </div>
</div>