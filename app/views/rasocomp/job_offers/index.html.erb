
<div class="row">
  <div class="twelve columns">
      <h1>All the Job Offers</h1>
      <hr/>
      <table>
        <tr>
          <th>Job Offer</th>
          <th>Date</th>
          <th>Candidates</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
        <% @offers.each do |offer| %>
            <tr>
              <td><%= link_to offer.job_name , company_job_offer_path(@company,offer) %></td>
              <td><%= offer.created_at %></td>
              <td><%= offer.candidates.count %></td>
              <td><% if offer.active %><%= 'Active'  %><% else %><%= 'Inactive' %><% end %></td>
              <td>
                   <%= link_to 'Update Offer' , edit_company_job_offer_path(@company,offer), :class=>"radius label"%>
                   <%= link_to 'Delete Offer' , [@company,offer] , :method => :delete , :confirm => 'Are you sure?', :class=>"alert radius label" %></td>
            </tr>
        <% end %>
      </table>

      <%= link_to "Create Job Offer" , new_company_job_offer_path(params[:company_id]), :class=>"button" %>
    </div>
  </div>