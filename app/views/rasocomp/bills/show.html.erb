<h1> <%= t(:bill) %> </h1>
<p> ID: <%= @bill.id %> </p>
<p> 
      <% if !@bill.company.nil? %>
     <%= t(:company) %> <%= link_to @bill.company.name, company_path(@bill.company_id) %>; 
    <%else%>
      Unknown_Company; 
    <% end %>
</p>
<p> Created: <%= @bill.created_at %> </p>
<p> Payment Date: <%= @bill.payment_date %> </p>
<p> Value: <%= @bill.value %> </p>
<p> State: <%= @bill.state %> </p>