<% evaluations.each do |ev| %>
    <tr>
      <td style="text-align:center"><%= link_to(ev.description, show_personal_evaluation_path(@company,ev)) %></td>
      <td style="text-align:center"><%= ev.period_begin %></td>
      <td style="text-align:center"><%= ev.period_end %></td>
      <td style="text-align:center"><%= User.find(ev.user_id).name %></td>
      <td style="text-align:center">
        <% if ev.status == "Active" %>
            <span style="color:green;"><%= ev.status%></span>
        <% else %>
            <span style="color:red;"><%=  ev.status %></span>
        <% end %>
      </td>
    </tr>
<% end %>