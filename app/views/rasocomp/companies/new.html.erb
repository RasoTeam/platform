<h1> New Company</h1>
<%= form_for @company do |f| %>
  <% @company.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
  <% end %>
  
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :slug %>
  <%= f.text_field :slug %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <br/>
  <%= f.submit %>

<% end %>
