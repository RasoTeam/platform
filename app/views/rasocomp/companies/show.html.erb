<div class="row">

	<!-- Left Column -->
	<div>
		<div class="row">
			<div class="twelve columns">
				<!-- Header Content -->
				<div class="row">
					<div class="four columns">
						<div class="twelve columns" style="padding-bottom:20px">
							<a href="#" class="th"><img src="http://placehold.it/300x300" alt="Foto da empresa"></a>
						</div>
					</div>
		          	
		          	<div class="eight columns">
		            	<h3 class="show-for-small"><%= @company.name %><hr/></h3>
		            	<div class="panel details">
		              		<h4 class="hide-for-small"><%= @company.name %>
		              			<span class="secondary label radius"><%= link_to "Edit", edit_company_path(@company) %></span>
		              			<hr/>
		              		</h4>
		            		<h5>Details</h5>
			            	<p><span class="label radius">Company Name</span> <%= @company.name %></p>
			            	<p><span class="label radius">NIF</span> <%= @company.nif %></p>
			            	<p><span class="label radius">SLUG</span> <a href="#"> <%= @company.tag+".rasohr.com" %></a></p>
			            	<p><span class="label radius">Employees</span> <%= @company.users.length-1 %></p>
		            	</div>
					</div>
		        </div>
		        <!-- End Header Content -->
		    	<!-- Table Content -->
				<div class="row">
					<div class="twelve columns">
					    <table class="twelve">
							  <thead>
							    <tr>
									<th>Cod</th>
									<th>Issued Date</th>
									<th>Payment Date</th>
									<th>Ammount</th>
									<th>State</th>
									<th>Actions</th>
								</tr>
							    </tr>
							  </thead>
							  <tbody>
								<% @bills.each do |bill| %>
									<tr>
										<td><%= bill.id %></td>
										<td><%= bill.created_at %></td>
										<td><%= bill.payment_date %></td>
										<td><%= bill.value %></td>
										<td><%= bill.state %></td>
										<td>Action</td>
									</tr>
								<% end %>
							  </tbody>
						</table>
						<!-- End Table Content -->
					</div>
		  		</div>
			</div>
		</div>
	</div>

</div>


<% if !user_signed_in? @company.tag %>
	<%= link_to "Sign In on Company", company_signin_path(params[:id]) %>
	<br/>
	<br/>
<% else %>
	<%= current_user( @company.tag).name %> |
	<%= link_to "Sign Out on Company", company_signout_path(params[:id]), method: "delete" %>
<br>
<% end %>

