<table class="twelve" >
  <thead>
    <tr>
      <th><%= t(:job_title) %></th>
      <th><%= t(:start_date) %></th>
      <th><%= t(:end_date) %></th>
      <th><%= t(:value) %></th>
      <% if current_user(@company.slug).role <= ROLE[:manager] %>
        <th><%= t(:action) %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
  <% @contracts.each do |contract| %>
    <tr>
      <td><%= contract.job_title %></td>
      <td><%= contract.start_date %></td>
      <td><%= contract.end_date %></td>
      <td><%= contract.value %></td>
      <% if current_user(@company.slug).role <= ROLE[:manager] %>
        <td><%= link_to t(:edit), edit_company_user_contract_path(@company,@user,contract) %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>