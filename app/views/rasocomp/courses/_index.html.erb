<table class="twelve" style="margin-top: 5px;">
	<thead>
		<tr>
			<th style="text-align: center"><%= t(:name) %></th>
			<th style="text-align: center"><%= t(:lecturer) %></th>
			<th style="text-align: center"><%= t(:start_day) %></th>
			<th style="text-align: center"><%= t(:end_day) %></th>
			<th style="text-align: center"><%= t(:category) %></th>
			<th style="text-align: center"><%= t(:state) %></th>
			<th style="text-align: center"><%= t(:enrolled) %></th>
			<th style="text-align: center"><%= t(:actions) %></th>
		</tr>
	</thead>
	<tbody>
	<% courses.each do |c| %>
	<tr>
		<td><%= c[0].name %></td>
		<td style="text-align: center"><%= c[0].lecturer %></td>
		<td style="text-align: center"><%= c[0].start_at %></td>
		<td style="text-align: center"><%= c[0].end_at %></td>
		<% if c[0].category == 1 %>
			<td style="color:green; text-align: center"><%= t(:public)  %></td>
		<% else ( 
			if c[0].category == 2 %>
				<td style="color:orange; text-align: center"><%= t(:private)  %></td>
			<%end)%>
		<% end %>
		<% if c[0].state == 0 %>
			<td style="color:red; text-align: center"><%= t(:inactive)  %></td>
		<% else ( 
			if c[0].state == 1 %>
				<td style="color:green; text-align: center"><%= t(:active)  %></td>
			<%end)%>
		<% end %>
		<% if c[1] %>
			<td style="color:green; text-align: center"><%= t(:yes_)  %></td>
		<% else%>
			<td style="color:red; text-align: center"><%= t(:no_) %> </td>
		<% end %>
		<% if c[0].state == 1 %>
		<td>
			<ul class="jobs_links">
				<li><%= link_to t(:enroll), enroll_company_training_course_path( company.id, training.id, c[0].id), :method => :put, :class=>"radius label"  %> </li>
		    	<li><%= link_to t(:unenroll), unenroll_company_training_course_path( company.id, training.id, c[0].id), :method => :put, :class=>"radius alert label"  %></li>
			</ul>
		</td>
		<% else %>
		<td><%= t(:no_actions)%></td>
		<%end%>
	</tr>

	<% end %>
	</tbody>

</table>