<div class="row">
  <div class="twelve columns">
    <ul class="breadcrumbs">
    	<li><%= link_to 'Home', user_dashboard_path(@company.id, current_user(@company.slug)) %></li>
        <li class="current">
          <a href="#"><%= t(:employees) %></a>
        </li>
    </ul>
  </div>
</div>
<div class="row">
		<div class="nine columns">
			<h3>Employees</h3>
		</div>
		<div class="three columns">
			<%= link_to "Add User", new_company_user_path( @company, params[:id]), :class=>"radius button right add_user" %>
		</div>
</div>

<div class="row">
	<div class="twelve columns">
		<div class="panel">
			<div class="row">
				<div class="twelve columns">
					<table class="twelve">
						<thead>
							<tr>
								<th style="text-align: center">Name</th>
								<th style="text-align: center">E-Mail</th>
								<th style="text-align: center">Role</th>
								<th style="text-align: center">Status</th>
							</tr>
						</thead>
						<tbody>
							<% @users.each do |u| %>
								<tr>
							    	<% if current_user(@company.slug).role == ROLE[:manager] %>
							      		<td><%= link_to u.name, company_user_path(u.company_id, u) %></td>
							      	<% else %>
							      		<td><%= u.name %></td>
							      	<% end %>
							      	<td style="text-align: center;"><%= u.email %></td>
							 
							      	<td style="text-align: center;"><%= t(ROLE.invert[u.role]) %></td>

							    	<% if u.state == STATE[:unchecked] %>
							      		<td style="color:red; text-align: center"><%= t(:unchecked)  %></td>
							      	<% else ( 
							      		if u.state == STATE[:inactive] %>
							      			<td style="color:orange; text-align: center"><%= t(:inactive)  %></td>
							      		<%else( 
							      			if u.state == STATE[:active]%>
							      				<td style="color:green; text-align: center"><%= t(:active)  %></td>
							      			<%end)%>
							      		<%end)%>
							      	<% end %>


							      	<!-- <td>
							      		<form class="custom" style="margin:0;"><label for="checkbox1"><input type="checkbox" id="checkbox1" style="display: none;"><span class="custom checkbox"></span></label></form>
							      	</td> -->
							    </tr>
  <br/>
<% end %>




						</tbody>
					</table>
				</div>
			</div>
			<div class="row">
				<div class="eight columns">
					<%= will_paginate @users, :previous_label=>"&laquo", :next_label=>"&raquo", :inner_window=>"4", :outer_window=>"4" %>
				</div>

				<div class="four columns">
					<div class="row collapse">
						<%= form_tag company_users_path, :method => 'get' do %>
			  			<div class="eight mobile-three columns">
			    				<%= text_field_tag :search, params[:search] %>
			  			</div>
			  			<div class="four mobile-one columns">
			   				 	<%= submit_tag "Search", :name => nil, :class=>"button expand postfix" %>
			  			</div>
						<% end %>
					</div>
				</div>


			</div>	
		</div>
			<!-- Fim Lisslugem -->
	</div>
</div>