        </div>


</div> 
  <!-- Cena Grande -->
  <div class="nine columns pull-three">
    <div class="signup">
      <div class="panel">
        <h3> Edit Password </h3>
        <hr/>  
            <% if @user.errors.any? %> <span class=" radius label">Error Messages</span>
            <hr/>
            <% end %>
            <% @user.errors.full_messages.each do |msg| %>
              <p><%= msg %></p>
            <% end %>

          <%= form_for :change_password, :url => update_password_company_user_path(@company,@user) do |f| %>

            <%= f.label :current_password, :class=>"radius label"%>
            <%= f.password_field :current_password, :class=>"input_space" %>

            <%= f.label :new_password, :class=>"radius label"%>
            <%= f.password_field :new_password, :class=>"input_space" %>

            <%= f.label :new_password_confirmation, :class=>"radius label"%>
            <%= f.password_field :new_password_confirmation, :class=>"input_space" %>
        
            <p style="text-align: center">
              <%= f.submit 'Save!', :class => "button" %>
            </p>
          <% end %>
        </div>
      </div>
  </div>
</div>


