<div class="row">
  <div class="nine columns">
    <div class="row">
      <div class="twelve columns">
        <ul class="breadcrumbs">
          <li><%= link_to 'Home', user_dashboard_path(@company.id, current_user(@company.slug)) %></li>
          <li class="current">
            <a href="#"><%= @user.name %> | <%= t(:profile) %> </a>
          </li>
        </ul>
      </div>
    </div>
      <div class="panel">
        <h3>User Profile </h3>
        <hr/>
        <!-- <p><span class=" radius label">ID</span><span> <%= @user.id %></span></p> -->
        <table class="twelve tableJobs">
          <tbody>
            <tr>
              <td><span class="label radius"><%= t(:name) %></span></td>
              <td><%= @user.name %></td>
            </tr>
            <tr>
              <td><span class="label radius"><%= t(:Email) %></span></td>
              <td><%= @user.email %></td>
            </tr>
            <tr>
              <td><span class="label radius"><%= t(:Role) %></span></td>
              <td><%= ROLE.invert[@user.role] %></td>
            </tr>
          </tbody>
        </table>
        <div style:"text-alig">
          <p style="text-align: center"><%= link_to "Edit", edit_company_user_path(@company, @user), :class=>"radius button" %></p>
        </div>
      </div>
      
      
      <div class="panel">
        <h4>Contracts</h4>
        <hr/>
        <% if !@contracts.any? %>
          <h3 style="text-align:center">There are no contracts</h3>
        <%else%>
        <%= render :partial => "rasocomp/contracts/list" %>
        <% end %>

        <% if current_user(@company.slug).role == ROLE[:manager] %>
          <p style="text-align: center"><%= link_to "Add Contract", new_company_user_contract_path( @company, @user), :class=>"radius button" %></p>
        <% end %>

    </div>
</div>




  <div class="three columns">

      <div class=" twelve columns row collapse">
        <div class="eight mobile-four columns">
          <input type="text" />
        </div>
        <div class="four mobile-one columns">
          <a class="button expand postfix">Search</a>
        </div>
      </div>

      <div class="twelve columns" style="padding-bottom:20px">
        <a href="#" class="th"><img src="http://placehold.it/200x200" alt="Foto da Pessoa"></a>
      </div>

      <div class="twelve columns" style="padding-bottom:20px">
        <div class="panel callout radius">
            <h5>Formações</h5>
            <p>Texto aqui</p>
          </div>
        </div>
      <div class="twelve columns" style="padding-bottom:20px">
        <div class="panel">
            <h5>Calendário</h5>
            <p>Texto aqui</p>
          </div>
        </div>

</div>
</div> 

