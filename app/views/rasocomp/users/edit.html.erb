<div class="row">
  <div class="three columns push-nine">

      <div class=" twelve columns row collapse">
        <div class="eight mobile-four columns">
          <input type="text" />
        </div>
        <div class="four mobile-one columns">
          <a class="button expand postfix">Search</a>
        </div>
      </div>

      <div class="twelve columns" style="padding-bottom:20px">
        <a href="#" class="th"><img src="http://placehold.it/200x200" alt="Foto da Pessoa"></a>
      </div>

      <div class="twelve columns" style="padding-bottom:20px">
        <div class="panel callout radius">
            <h5>Formações</h5>
            <p>Texto aqui</p>
          </div>
        </div>
      <div class="twelve columns" style="padding-bottom:20px">
        <div class="panel">
            <h5>Calendário</h5>
            <p>Texto aqui</p>
          </div>
        </div>


</div> 
  <!-- Cena Grande -->
  <div class="nine columns pull-three">
    <div class="signup">
      <div class="panel">
          <div class="row">
          <div class="eight columns">
            <h3> Edit User Profile  </h3>
          </div>
          <% if current_user(@company.slug) == @user %>
            <div class="four columns">
              <%= link_to t(:change_password), edit_password_company_user_path(@company,@user), :class=>"radius button right add_user" %>
            </div>
          <% end %>
          <div class="twelve columns">
          <hr/>

            <%= form_for [@company, @user] do |f| %>

              <% if @user.errors.any? %> <span class=" radius label">Error Messages</span>
                <hr/>
              <% end %>
              <% @user.errors.full_messages.each do |msg| %>
                <p><%= msg %></p>
              <% end %>

              <span class=" radius label"><%= t(:name) %></span>
              <%= f.text_field :name, :class=>"input_space"  %>
          
              <p style="text-align: center">
                <%= f.submit 'Save!', :class => "button" %>
              </p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


