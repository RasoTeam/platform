</div> 
  <!-- Cena Grande -->
  <div class="nine columns pull-three">

        <h3> Edit User Profile </h3>
        <hr/>
          <%= form_for [@company, @user] do |f| %>

            <span class=" radius label">User Name</span>
            <%= f.text_field :name %>

          <span class="radius label">User Email</span>
            <%= f.text_field :email %>

          <span class=" radius label">Password</span>
            <%= f.password_field :password %>

          <span class=" radius label">Comfirm Password</span>
            <%= f.password_field :password_confirmation %>
        
            <p style="text-align: center"><%= f.submit 'Save!', :class => "button" %></p>

            
            <% if @user.errors.any? %> <span class=" radius label">Error Messages</span>
            <hr/>
            <% end %>
            <% @user.errors.full_messages.each do |msg| %>
              <p><%= msg %></p>
            <% end %>
          <% end %>




  </div>
</div>


