<div class="row">
  <div class="twelve columns">
    <ul class="breadcrumbs">
      <li><%= link_to t(:home), user_dashboard_path(@company.slug, current_user(@company.slug)) %></li>
        <li class="current">
          <a href="#"><%= t(:trainings) %></a>
        </li>
    </ul>
  </div>
</div>

<div class="row">
  	<div class="twelve columns">
  		<h2><%= t(:trainings) %></h2>
  		<table class="twelve">
			<thead>
				<tr>
					<th style="text-align: center"><%= t(:trainings) %></th>
					<th style="text-align: center"><%= t(:actions) %></th>
				</tr>
			</thead>
			<tbody>
	   		<% @trainings.each do |t| %>
			   	<tr>
			    	<td>
						Training id: <%= t.id %>;
						  Name: <%= t.name %>;
						  Desc: <%= t.desc %>;
						  <%= link_to 'start a course', new_company_training_course_path( @company, t) %><br>
					</td>
					<td>
						<%= render :partial => "/rasocomp/courses/manage", :locals => {:courses => t.courses, :training => t} %> 
					</td>
				</tr>
				<tr>

				</tr>

			<% end %>
						</tbody>

	</table>

	</div>
</div>


