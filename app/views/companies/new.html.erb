
<h1> New Company</h1>
<%= form_for @company do |f| %>
  <% @company.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
  <% end %>
  
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :tag %>
  <%= f.text_field :tag %>
  <br/>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit %>

<% end %>
