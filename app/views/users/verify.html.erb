<p>Verify Account</p>
<%= form_for [@company, @user] do |f| %>
  <% @user.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>

  <%= f.label :password %>
  <%= f.text_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.text_field :password_confirmation %>

  <%= f.submit %>
<% end %>
