<div class="row">
  <div class="twelve columns" style="margin-top: 50px">
    <ul class="breadcrumbs">
      <li><%= link_to @company.name , public_company_job_offers_path( @company) %></li>
      <li><%= link_to @offer.job_name, new_apply_path(params[:company_id],params[:id]) %></li>
      <li class="current"> <a><%= t(:pdf_profile) %></a></li>
    </ul>
  </div>
</div>

<div class="row">
  <div class="twelve columns">
    <h2>Profile</h2>
    <div class="row">
      <div class="twelve columns">
        <table class="twelve tableJobs">
          <tr>
            <td><p class="radius label">Name</p></td>
            <td><%= @candidate.name %></td>
          </tr>
          <tr>
            <td><p class="radius label">E-mail</p></td>
            <td><%= @candidate.email %></td>
          </tr>
          <tr>
            <td><p class="radius label">Nationality</p></td>
            <td><%= @candidate.nationality %></td>
          </tr>
          <tr>
            <td><p class="radius label">Location</p></td>
            <td><%= @candidate.location %></td>
          </tr>
          <tr>
            <td><p class="radius label">Phone Number</p></td>
            <td><%= @candidate.phone %></td>
          </tr>
        </table><br/>
        <div align="right"> To confirm your submited CV: <a href="/<%= @file_pdf.split('/')[1] %>">click here</a></div>

        <!--<div><iframe src="http://localhost:3000/<%= @file_pdf.split('/')[1] %>" style="width:100%;height:800px;margin-bottom:10px;overflow:visible;"></iframe></div>-->
        <br/>

      </div>
    </div>
  </div>
</div>

<%= link_to 'Accept' , save_xml_profile_path, :class=>"button" %>
<%= link_to 'Cancel' , cancel_profile_path, :class=>"button" %>
