<div class="row">
  <div class="twelve columns">
    <div id="signup">
      <div class="panel">
      <h4>Welcome to RASO registation process</h4>  
      <p>Please fill in the form with your company information</p>
        <hr />    
        
        <%= form_for @company, :url => public_companies_path do |f| %>
          
          <% @company.errors.full_messages.each do |msg| %>
              <p><%= msg %></p>
            <% end %>

            <label>Complete Company name</label>
            <!-- <input type="text" placeholder="Company name" /> -->
            <%= f.text_field :name %>

            <label>Slug</label>
          <div class="row collapse">
              <div class="nine mobile-three columns">
                <%= f.text_field :tag %>
              </div>
              <div class="three mobile-one columns">
                <span class="postfix">.rasohr.com</span>
                
              </div>
            </div>
            <label>Email</label>
            <%= f.text_field :email %>
            <!-- <input type="text" placeholder="Email" /> -->
          <hr />
            <p style="text-align: center"><%= f.submit 'Get Started!', :class => "button" %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>