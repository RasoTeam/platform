<ul>
	<li><b>Companies</b></li>
  <% @companies.each do |company| %>
    <li>
      <%= company.name %>
    </li>
  <% end %>
</ul>

<div class="company">
<h1><%= @company.name %></h1>

<label>Details</label>

<p>Company Name <%= @company.name %></p>
<p>Nif <%= @company.nif %></p>
<p>Slug <%= @company.tag+".rasohr.com" %></p>
<p>Employees <%= @company.users.length %></p>
</div>

<table>
	<tbody>
		<tr>
			<th>Cod</th>
			<th>Issued Date</th>
			<th>Payment Date</th>
			<th>Ammount</th>
			<th>State</th>
			<th>Actions</th>
		</tr>

		<% @bills.each do |bill| %>
			<tr>
				<td><%= bill.id %></td>
				<td><%= bill.created_at %></td>
				<td><%= bill.payment_date %></td>
				<td><%= bill.value %></td>
				<td><%= bill.state %></td>
				<td>Action</td>
			</tr>
		<% end %>
	</tbody>
</table>